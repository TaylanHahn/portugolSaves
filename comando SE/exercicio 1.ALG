Algoritmo "imparPar"

Var numero : inteiro


Inicio
   escreval("Insira um número inteiro: ")
   leia(numero)

   se (numero = 0) entao
   escreval("Esse número é nulo")

   senao
   se (numero % 2 = 0) entao
      escreva("Esse número é par")

   senão(numero % 2 = 1) entao
         escreva("Esse número é ímpar")
      Fimse
   Fimse

Fimalgoritmo